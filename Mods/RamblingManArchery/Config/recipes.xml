<RamblingMan>

<!-- Rambling Man Archery -->

<!-- If RamblingManOverhaul mod not loaded -->
<conditional>
<if cond="mod_loaded('RamblingManOverhaul') == false">

<append xpath="/recipes">

<!-- *** Arrowheads -->
<!-- Recover iron and steel arrowheads from arrows and bolts. -->

<recipe name="resourceArrowHeadSteelAP" count="1" tooltip="ttScrapMetalBrass" always_unlocked="true" tags="salvageScrap"> <wildcard_forge_category /> </recipe>

<recipe name="resourceArrowHeadIron" count="1" tooltip="ttScrapMetalBrass" always_unlocked="true" tags="salvageScrap"> <wildcard_forge_category /> </recipe>

<!-- *** Improvised Steel Arrows and Bolts -->
<!-- More wood and feathers. Longer crafting time. -->
<recipe name="ammoArrowSteelAPFTLR" count="1"  craft_time="2" tags="learnable,packMuleCrafting">
	<ingredient name="resourceArrowHeadSteelAP" count="1"/>
	<ingredient name="resourceWood" count="2"/>
	<ingredient name="resourceFeather" count="2"/>
</recipe>

<recipe name="ammoCrossbowBoltSteelAPFTLR" count="1" craft_time="2" tags="learnable,packMuleCrafting">
	<ingredient name="resourceArrowHeadSteelAP" count="1"/>
	<ingredient name="resourceWood" count="2"/>
	<ingredient name="resourceFeather" count="2"/>
</recipe>

<!-- *** Improvised Special Arrows (Exploding and Flaming) -->
<!-- Exploding iron arrows and bolts -->

<recipe name="ammoArrowExplodingFTLR" count="1" craft_time="5" tags="learnable,packMuleCrafting">
	<ingredient name="ammoArrowIron" count="1"/>
	<ingredient name="thrownAmmoPipeBombFTLR" count="2"/>
	<ingredient name="resourceDuctTape" count="1"/>
</recipe>

