<RamblingMan>

<!-- Rambling Man Archery -->

<!-- If RamblingManOverhaul mod not loaded -->

<conditional>
<if cond="mod_loaded('RamblingManOverhaul') == false">

<!-- *** AMMO SUPPLIES -->
<!-- Remove arrowheads from ammoSupplies trader_item_group to reduce competition between bows and firearm ammo crafting supplies. -->
<remove xpath="/traders/trader_item_groups/trader_item_group[@name='ammoSupplies']/item[@name='resourceArrowHeadIron' or @name='resourceArrowHeadSteelAP']"/>

<!-- *** ARROW SUPPLIES -->
<!-- Create ammoArrowSuppliesFTLR trader_item_group. prob="0.05" removed from arrowheads. 
Increase steel arrowheads counts. -->

<prepend xpath="/traders/trader_item_groups">
	<trader_item_group name="ammoArrowSuppliesFTLR">
		<item name="resourceArrowHeadIron" count="50,200"/> <!-- 5 -->
		<item name="resourceArrowHeadSteelAP" count="25,50" /> <!-- 5 -->
		<!-- <item name="resourceArrowHeadSteelAP" count="5,25" />  -->
		<!-- <item name="resourceFeather" count="20,200"/>  -->
		<!-- 5 -->
	</trader_item_group>
</prepend>

<!-- Add ammoArrowSuppliesFTLR item group to traderAlways and traderGeneral and trader Hugh specialty. -->

<!-- traderAlways -->
<append xpath="/traders/trader_item_groups/trader_item_group[@name='traderAlways']">
		<item group="ammoArrowSuppliesFTLR" count="2"/>
</append>

<!-- traderGeneral -->
<append xpath="/traders/trader_item_groups/trader_item_group[@name='traderGeneral']">
		<item group="ammoArrowSuppliesFTLR" count="1,3"/>
</append>

<!-- TRADER HUGH ID:7 SPECIALTY: GUNS & AMMO -->
<insertAfter xpath="/traders/trader_info[@id='7']/trader_items/item[@group='ammoSupplies']">
		<item group="ammoArrowSuppliesFTLR" count="2,3"/>
</insertAfter> 

</if>
</conditional>

</RamblingMan>