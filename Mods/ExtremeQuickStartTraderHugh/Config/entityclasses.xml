<RamblingMan>

<conditional>
<if cond="mod_loaded('0-SCore_sphereii') and mod_version('0-SCore_sphereii') >= version(2,4,11,1222)">

<append xpath="entity_classes/entity_class[@name='playerMale']">

<!-- Trigger buff to teleport to the trader.  -->	
	<effect_group name="action_AddTeleportToTraderQuest">
		<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" target="self" buff="buff_action_AddTeleportToTraderQuest" />
	</effect_group>	

<!-- Trigger buff to Skip_Tutorial_Challenges.  -->	
	<effect_group name="action_Skip_Tutorial_Challenges">
		<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" target="self" buff="buff_Skip_Tutorial_Challenges_FTLR" />
	</effect_group>

<!-- Trigger buff to set Intro Buried Supplies as completed.  -->	
	<effect_group name="action_CompleteIntroBuriedSupplies">
		<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" target="self" buff="buff_action_CompleteIntroBuriedSupplies" />
	</effect_group> 

<!-- Trigger buff to add Starting Armor and Weapons Bundle.  -->	
	<effect_group name="action_AddItemsBasicsoFSurvivalBundleFTLR">
		<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" target="self" buff="buff_action_AddItemsBasicsoFSurvivalBundleFTLR" />
	</effect_group>
</append>

</if>
</conditional>
</RamblingMan>